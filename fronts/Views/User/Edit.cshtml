@model fronts.Models.ProductoViewModel


<div class=" card text-primary">
    <div class="card-header text-center">
        <h5>Editar Producto</h5><!-- Título principal de la tarjeta -->
    </div>
    <div class=" card-body text-primary">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit">
                    <!-- Formulario HTML que envía datos a la acción 'Edit' en el controlador -->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>  <!-- Muestra los errores de validación del modelo -->

                    <input type="hidden" asp-for="ProductoId" />  <!-- Campo oculto que vincula el campo UsuarioId del modelo -->

                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>  <!-- Etiqueta para el campo Nombre -->
                        <input asp-for="Nombre" class="form-control" />  <!-- Campo de entrada para el Nombre -->
                        <span asp-validation-for="Nombre" class="text-danger"></span>  <!-- Muestra errores de validación para el Nombre -->
                    </div>
                    <div class="form-group">
                        <label asp-for="Activo" class="control-label"></label>  <!-- Etiqueta para el campo Apellido -->
                        <textarea asp-for="Activo" class="form-control"></textarea>  <!-- Área de texto para el Apellido -->
                        <span asp-validation-for="Activo" class="text-danger"></span>  <!-- Muestra errores de validación para el Apellido -->
                    </div>
                    <div class=" card-footer text-center">
                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-outline-primary btn-sm" />  <!-- Botón para enviar el formulario -->
                            <a asp-action="Index" class="btn btn-outline-success btn-sm">Volver a la lista</a>  <!-- Enlace para volver a la página de lista -->
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>







